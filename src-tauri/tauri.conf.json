{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Code Editor",
  "version": "0.1.0",
  "identifier": "com.code-editor.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Code Editor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["**"],
        "deny": []
      }
    },
    "shell": {
      "scope": {}
    },
    "dialog": {
      "scope": {}
    }
  }
}
