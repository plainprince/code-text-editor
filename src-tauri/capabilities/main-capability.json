{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["*"],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "core:window:allow-set-title",
    "fs:allow-app-write",
    "fs:allow-app-meta-recursive",
    "fs:allow-app-read-recursive",
    "fs:allow-app-read",
    "dialog:allow-open",
    {
      "identifier": "fs:scope",
      "permissions": [
        {
        "allow": [{ "path": "$APPDATA/*" }, { "path": "$HOME/Library/Application Support/*" }]
        }
      ]
    }
  ]
}